<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberDao">
  <resultMap id="MemberMap" type="Member">
    <id column="member_no" property="no"/>
    <result column="email" property="email"/>
    <result column="name" property="name"/>
    <result column="photo" property="photo"/>
    <result column="created_date" property="createdDate"/>
  </resultMap>

  <insert id="add" parameterType="Member">
    <!-- 파라미터타입이 객체인 경우 #{}에 값을 정확하게 써줘야 함 -->
    insert into members(email,name,password,photo)
    values(#{email},#{name},sha2(#{password},256),#{photo})
  </insert>
  <delete id="delete" parameterType="int">
    <!--파라미터 타입이 객체가 아닌 경우 #{}에 아무렇게나 명명해도 됨 -->
    delete from members where member_no=#{no}
  </delete>
  <select id="findBy" parameterType="int" resultMap="MemberMap">
    select
      member_no,
      email,
      name,
      photo,
      created_date
    from members
    where
      member_no=#{no}
  </select>
  <select id="findAll" resultMap="MemberMap">
    select
      member_no,
      email,
      name,
      photo,
      created_date
    from
      members
  </select>
  <update id="update" parameterType="Member">
    update members set
      email=#{email},
      name=#{name},
      photo=#{photo}
    <if test="password != ''">
      , password=sha2(#{password}, 256)
    </if>
    where
      member_no=#{no}
  </update>
  <select id="findByEmailAndPassword" parameterType="map" resultMap="MemberMap">
    select
      member_no,
      email,
      name,
      created_date
    from
      members
    where
      email=#{email} and
      password=sha2(#{password},256)
  </select>
</mapper>
